{
  "name": "remark-strip-html",
  "version": "1.0.2",
  "description": "Remove html formatting from Markdown",
  "license": "MIT",
  "keywords": [
    "text",
    "markdown",
    "plain",
    "text",
    "remark"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/craftzdog/remark-strip-html.git"
  },
  "author": "Takuya Matsuyama <hi@craftz.dog>",
  "files": [
    "index.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^17.0.0",
    "esmangle": "^1.0.1",
    "nyc": "^15.1.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-preset-wooorm": "^8.0.1",
    "remark-stringify": "^9.0.1",
    "tape": "^5.1.0",
    "unified": "^9.2.0",
    "unist-builder": "^2.0.3",
    "xo": "^0.53.1"
  },
  "scripts": {
    "build-bundle": "browserify index.js -s stripHtml > strip-html.js",
    "build-mangle": "esmangle strip-html.js > strip-html.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 90,
    "functions": 100,
    "branches": 88
  },
  "xo": {
    "space": true,
    "esnext": false,
    "ignores": [
      "strip-html.js"
    ],
    "rules": {
      "unicorn/no-fn-reference-in-iterator": 0,
      "unicorn/better-regex": 0
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
